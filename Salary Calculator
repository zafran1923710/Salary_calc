<body>
  <h1>تنخواہ کیلکولیٹر</h1>
  <p>براہ کرم بنیادی تنخواہ درج کریں:</p>
  <input type="number" id="basicPay" placeholder="بنیادی تنخواہ">
  <br>
  <button onclick="calculatePay()">حساب کریں</button>

  <div class="result" id="result"></div>

  <script>
    function calculatePay() {
      const basicPay = parseFloat(document.getElementById('basicPay').value);
      if (isNaN(basicPay) || basicPay <= 0) {
        alert("براہ کرم درست بنیادی تنخواہ درج کریں۔");
        return;
      }

      const dispensary = basicPay * 0.30;
      const adhoc2025 = basicPay * 0.10;
      const total = basicPay + dispensary + adhoc2025;

      document.getElementById('result').innerHTML = `
        <p><strong>بنیادی تنخواہ:</strong> روپے ${basicPay.toFixed(0)}</p>
        <p><strong>ڈسپنسری الاؤنس (٪30):</strong> روپے ${dispensary.toFixed(0)}</p>
        <p><strong>ایڈہاک الاؤنس 2025 (٪10):</strong> روپے ${adhoc2025.toFixed(0)}</p>
        <p><strong>کل تنخواہ:</strong> روپے ${total.toFixed(0)}</p>
      `;
    }
  </script>
</body>
</html>
